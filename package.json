{
  "name": "@bardy-michael/monorepo",
  "version": "3.0.0",
  "private": true,
  "packageManager": "pnpm@10.12.1",
  "scripts": {
    "dev": "pnpm --filter '@repo/*' dev",
    "dev:portfolio": "pnpm --filter @repo/portfolio dev",
    "dev:blog": "pnpm --filter @repo/blog dev",
    "dev:site-check": "pnpm --filter @repo/site-check dev",
    "dev:docs": "pnpm --filter @repo/docs dev",
    "build": "pnpm --filter '@repo/*' build",
    "build:portfolio": "pnpm --filter @repo/portfolio build",
    "build:blog": "pnpm --filter @repo/blog build",
    "build:site-check": "pnpm --filter @repo/site-check build",
    "build:docs": "pnpm --filter @repo/docs build",
    "lint": "pnpm --filter '@repo/*' lint",
    "test": "pnpm --filter '@repo/*' test",
    "test:utils": "pnpm --filter @repo/utils test",
    "test:seo": "pnpm --filter @repo/seo-resources test",
    "test:portfolio": "pnpm --filter @repo/portfolio test",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean:deps": "depcheck --config .depcheckrc",
    "clean:exports": "ts-prune",
    "clean:check": "npm-check",
    "clean:eslint": "eslint . --fix",
    "clean": "npm run clean:deps && npm run clean:exports && npm run clean:check && npm run clean:eslint",
    "postinstall": "node scripts/postinstall.mjs"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^25.0.3",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitejs/plugin-react": "^5.1.2",
    "depcheck": "^1.4.7",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^16.5.0",
    "jsdom": "^27.3.0",
    "ts-prune": "^0.10.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.2.7",
      "@types/react-dom": "19.2.3"
    },
    "ignoredBuiltDependencies": [
      "unrs-resolver"
    ]
  }
}
